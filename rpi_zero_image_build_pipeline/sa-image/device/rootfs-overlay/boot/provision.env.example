# Copy to /boot/provision.env and adjust per batch (secrets stay outside the image)
# Hostname settings
HOSTNAME_VALUE="SC-<SERIAL_WILL_BE_SUBSTITUTED>"
HOSTNAME_SHORT="pi-<LAST6>"

# Tailscale
ENABLE_TAILSCALE=yes
TAILSCALE_AUTH_KEY="tskey-auth-REDACTED"

# App repo (optional overrides)
REPO_URL="https://github.com/estconsulting/pi-controller-nodejs.git"
REPO_REF="main"

# App env (override as needed)
NODE_ENV="production"
NODE_PORT=3000
ENCRYPTION_KEY="CHANGE_ME"
LOWDB_DB_FILE="/opt/pi-controller-nodejs/data/pi-controller-db.json"
SQLITE_DB_FILE="/opt/pi-controller-nodejs/data/pi-controller.db"
WEB_SOCKET_HOST="https://api.intelliguardsa.co.za"
WEB_SOCKET_PATH="/controller"
